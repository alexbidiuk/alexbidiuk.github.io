@keyframes blink
  0%
    opacity 0
  20%
    opacity .6
  40%
    opacity .2
  60%
    opacity .8
  80%
    opacity .4
  100%
    opacity 1

@keyframes fade-in
  0%
    visibility visible
  1%
    opacity 0
  100%
    opacity 1
    visibility visible

@keyframes fade-out
  0%
    opacity 1
  99%
    opacity 0
  100%
    opacity 0
    visibility hidden

@keyframes preloaderBg 
  0%
    background-position 0% 50%           
  50% 
    background-position 100% 50%           
  100% 
    background-position 0% 50%

@keyframes neon 
  0% 
    filter drop-shadow(0 0 6px rgba(209, 197, 200, .7))
            
  30% 
    filter drop-shadow(0 0 6px rgba(209, 197, 200, .7))
            
  100% 
    filter drop-shadow(0 0 22px rgba(255, 255, 255, 1))
            
@keyframes dash
  to
    stroke-dashoffset 0