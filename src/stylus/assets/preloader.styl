json('../../js/configurations/animation.json');
.logo.preloader-logo 
    width 690px
    transition all preloader-logo_changing ease-in-out
        
.preloader 
    position absolute
    opacity 1
    visibility visible
    top 0
    left 0
    right 0
    bottom 0
    background-image linear-gradient(270deg, #944f60, #a75065, #01020a)
    background-size 600% 600%
    animation preloaderBg preloader-background ease infinite
    transition all preloader-fading preloader-fading_function preloader-fading_delay
    z-index 1000000
    &.ended 
        opacity: 0;
        visibility: hidden;
        .preloader-logo
            transform: translate(-50%, -50%) scale(.58, .58);
