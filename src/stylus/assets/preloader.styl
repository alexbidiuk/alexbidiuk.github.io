@import "../variables.styl"
json('../../js/configurations/animation.json');

.logo.preloader-logo
    transform translate3d(-50%, -50%,0) scale3d(1.6,1.6,1.6)
    stroke-dasharray 1000
    stroke-dashoffset 1000
    animation dash preloader-logo_drawer ease-in-out forwards preloader-logo_drawer_delay,
                neon logo-glowing ease-in-out infinite alternate

    transition all preloader-logo_changing ease-in-out
    overflow visible
.preloader
    position absolute
    opacity 1
    visibility visible
    opacity 0 //for dev
    visibility hidden //for dev
    top 0
    left 0
    right 0
    bottom 0
    background-image linear-gradient(270deg, #944f60, #a75065, #01020a)
    background-size 600% 600%
    animation preloaderBg preloader-background ease infinite
    transition all preloader-fading cubic-bezier(0.42, 0, 1, 0.21) preloader-fading_delay
    z-index 1000000
    &.ended 
        opacity 0
        visibility hidden
        .preloader-logo
            transform translate3d(-50%, -50%, 0) scale3d(1,1,1)

+media-query(only screen, max-width $medium)
  .logo.preloader-logo
    transform translate3d(-50%, -50%, 0) scale3d(1.2,1.2,1.2)