@import "../variables.styl"
/* Porttfolio styles */
#portfolio
  .page-content
    position: relative
    overflow-x auto
    overflow hidden
    .portfolio-items-wrapper
      absolute 0 false false 0
      height 10000vh
      width 10000vw
      transform-origin left center
      transform translate3d(0, -50%, 0) rotate(45deg)
      overflow hidden
      .portfolio-scrolling-block
        display flex
        flex-wrap nowrap
        overflow visible
        size 100%
        transform-origin left center
        will-change transform
        transition transform 1s ease-out
        .portfolio-item
          display block
          position relative
          height 100%
          overflow hidden
          border-left 1px solid $purple
          border-right 1px solid $purple
          &:after
            display block
            absolute 50% false false 50%
            transform translate3d(-50%, -50%, 0) rotate(-45deg)
            content ''
            height 100vh
            width 100vw
            background url("/images/portfolio/nodio.png") no-repeat 50% 50%
            background-size cover
            z-index -1



+media-query(only screen, max-width $medium)
  #team
    .page-content
      .persons
        .person
          .data
            .circle
              size 200px
