@import "../variables.styl"
portfolio_routes = json('../../js/configurations/portfolio_routes.json', { hash: true, leave-strings: true });
/* Porttfolio styles */
#portfolio
  .page-content
    position: relative
    overflow-x auto
    overflow hidden
  .portfolio-items-wrapper
    absolute 0 false false 0
    height 10000px
    width 10000px
    transform-origin left center
    transform translate3d(0, -50%, 0) rotate(45deg)
    overflow hidden
  // .portfolio-title
  //     flex 1 1 auto
  //     display: flex;
  //     align-items: center;
  //     justify-content: center;
  // .portfolio-title-text
  //   color $white
  //   font-size 24px
  //   text-shadow 0px 0px 4px $white
  .portfolio-scrolling-block
    display flex
    flex-wrap nowrap
    overflow visible
    size 100%
    transform-origin left center
    will-change transform
  .portfolio-item
    display block
    position relative
    height 100%
    overflow hidden
    border-left 1px solid $purple
    border-right 1px solid $purple
    .portfolio-item-title
      absolute 50% false false 50%
      transform translate3d(-50%, 0, 0) rotate(-45deg)
      color $white
      font-size 24px
      text-shadow 0px 0px 4px $white
    // &:first-child
    //   .portfolio-item-title
    //     transform translate3d(100px,  270px, 0)
    // &:last-child
    //   .portfolio-item-title
    //     transform translate3d(-140px, -430px, 0)

for val, key in portfolio_routes
  #portfolio
    .portfolio-item
      &[id*=\'{key}\']:after
        display block
        absolute 50% false false 50%
        transform translate3d(-50%, -50%, 0) rotate(-45deg)
        content ''
        size 1000vmax
        background-size cover
        z-index -1
        background s('url(%s)', '/images/portfolio/' + val + '.png') no-repeat 50% center

