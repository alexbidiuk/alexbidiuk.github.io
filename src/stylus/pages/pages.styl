+media-query(only screen, max-width $mobileWidth)
  .page
    max-width 600px
    margin 0 auto !important
    &.product
      max-width 100%
      .page-footer
        static false
    .page-header
      margin 0
      padding-top 15px
      padding-bottom 35px !important
    .header
      width 100% !important
      margin-left 0 !important
      margin-right 0 !important
      margin-bottom 0 !important
      padding-left 0
      padding-right 0
      text-align center
    .text-right
      margin 30px auto 0 !important
      display block
      max-width none !important
      width 100% !important
      text-align justify
      -moz-text-align-last center
      text-align-last center
    .text
      text-align justify
      -moz-text-align-last center
      text-align-last center

+media-query(only screen, max-width 780px)
  .page
    &.product
      .page-footer
        margin -1px 0 50px
        padding-bottom 0
  #product-tech
    .page-content
      padding-top 83px 
    .page-footer
      margin -30px 0 50px  
+media-query(only screen, max-width 480px)
  .page
    .page-header
      .header
        font-size 45px
    &.product
      .page-footer
        height auto
        padding-bottom 95px
        margin -101px 0 42px
  #product-tech
    .page-content
      padding-top 117px 
    .page-footer
      margin -45px 0 42px
      height 123px