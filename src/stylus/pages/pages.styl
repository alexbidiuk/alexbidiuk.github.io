@import "../variables.styl"

/* Pages common styles */
.pages
  size 100%
  box-sizing border-box
  margin auto
  relative 
  
.page
  overflow hidden
  relative false
  box-sizing border-box
  opacity 0
  max-height 0
  transition opacity 500ms cubic-bezier(0.250, 0.250, 0.750, 0.750),
              max-height 0s cubic-bezier(0.250, 0.250, 0.750, 0.750) 500ms
  &.show
    z-index 1
    opacity 1
    max-height 10000px
    overflow visible
    // transition opacity $content-show-transition-time linear,
    //            max-height 0s linear,
    //            overflow 0s linear
    -webkit-transition opacity 500ms cubic-bezier(0.250, 0.250, 0.750, 0.750),
                        max-height 0s cubic-bezier(0.250, 0.250, 0.750, 0.750)  
 
    transition opacity 500ms cubic-bezier(0.250, 0.250, 0.750, 0.750),
                max-height 0s cubic-bezier(0.250, 0.250, 0.750, 0.750)
  
    -webkit-transition-timing-function cubic-bezier(0.250, 0.250, 0.750, 0.750),
                                        cubic-bezier(0.250, 0.250, 0.750, 0.750)

    transition-timing-function cubic-bezier(0.250, 0.250, 0.750, 0.750),
                                cubic-bezier(0.250, 0.250, 0.750, 0.750)
 
  p
    text-align left
  
  .page-content
    &:before
    &:after
      content ''
      display block
      size 100% 0
      transition height 0.2s linear
    
  .page-header
    .header
      font-size 60px
      font-weight 700
      color $white
      letter-spacing 4px
      transition font-size 0.2s linear

  .page-footer
    relative false
    margin: -61px 0 0 0;
    padding-bottom 61px
    
