@import "../variables.styl"
/* Team styles */
#team
  background-color $team-color
  .page-content
    .persons
      display flex
      flex-wrap wrap
      justify-content center
      .person
        display block
        padding 0 20px
        font-size 16px
        line-height 1.5
      .data
        text-align center
      .circle
        position relative
        margin 20px
        size 250px 250px
        border-radius 50%
        overflow hidden
      .circle-border
        absolute 50% false false 50%
        fill none
        stroke $white
        stroke-dasharray 1000
        stroke-dashoffset 1000
        transform translate(-50%, -50%)
        .no-touch &:hover
          animation dash 1.5s ease-in
      .photo
        display block
        size 100% 100%
        object-fit cover
      .position
        font-size 14px

+media-query(only screen, max-width $medium)
  #team
    persons
      .circle
        size 200px
